# Finance App Environment Variables

# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=finance_project.settings
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgres://financeuser:financepass@db:5432/financedb

# Redis Configuration
REDIS_URL=redis://:redispass@redis:6379/0

# File Upload Settings
MAX_UPLOAD_SIZE=100000000

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Static and Media Files
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media

# Time Zone
TIME_ZONE=Asia/Shanghai

# Default User Configuration
DEFAULT_PREPARED_BY=系统管理员
